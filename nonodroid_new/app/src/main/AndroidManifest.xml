<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.jhopo.nonodroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AddAnimeActivity" />
        <activity
            android:name=".deleteAnime"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".AnimeInfoActivity" />
        <activity
            android:name=".name_edit"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".updatetime_edit"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".ep_edit"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PreMainActivity" />
    </application>

</manifest>
